@model IEnumerable<VietAgrisell.ViewModels.CategoriesMenuViewModel>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh mục</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach (var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name" style="padding: 10px">
                        <a asp-controller="Products" asp-action="Index" asp-route-cate="@item.CategoryId">
                            <img height="45px" width="50px" src=@item.ImageUrl alt=@item.CategoryName>
                            <i class="fas fa-apple-alt me-2"></i>@item.CategoryName
                        </a>
                        <span>@item.Amount</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>