@model VietAgrisell.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng ký tài khoản</h1>
        <form asp-action="Register" asp-controller="User" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12 col-lg-6 col-xl-7">
                    <div class="row">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.UserName" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.UserName" class="form-control">
                                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.Password" class="form-control">
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-item">
                            <label asp-for="@Model.Name" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.Name" class="form-control">
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div class="form-check my-3">
                            <input asp-for="@Model.Gender" class="form-check-input">
                            <label class="form-check-label" for="Gender">Nam</label>
                        </div>
                        <div class="form-item">
                            <label asp-for="@Model.DateOfBirth" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.DateOfBirth" class="form-control">
                            <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="form-item">
                            <label asp-for="@Model.Address" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.Address" class="form-control">
                            <span asp-validation-for="@Model.Address" class="text-danger"></span>
                        </div>
                        <div class="form-item">
                            <label asp-for="@Model.Mobile" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.Mobile" class="form-control">
                            <span asp-validation-for="@Model.Mobile" class="text-danger"></span>
                        </div>
                        <div class="form-item">
                            <label asp-for="@Model.Email" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.Email" class="form-control">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="form-item">
                            <label for="Image" class="form-label my-3">Hình ảnh<sup>*</sup></label>
                            <input type="file" name="Image" class="form-control">
                        </div>
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng ký</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

